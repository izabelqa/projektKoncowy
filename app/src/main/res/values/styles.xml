<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyCalendarView" parent="Widget.Material3.MaterialCalendar.Day.Selected">
        <item name="android:textColorPrimary">@color/lavender</item> <!-- Kolor tekstu -->
        <item name="colorAccent">@color/lavender</item> <!-- Kolor zaznaczenia dnia -->
    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Reszta stylÃ³w dla trybu ciemnego -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lavender</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonStyle">@style/RoundedButton</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_backgroud</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>